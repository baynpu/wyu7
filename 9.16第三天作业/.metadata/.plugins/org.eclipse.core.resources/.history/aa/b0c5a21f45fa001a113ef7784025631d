package Day_03;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

public class ByteAndCharSwitchDemo {
	public static void main(String[] args) {
	InputStream in = System.in; // 创建字节流对象 System.in 代表从控制台输入
	// 创建字符流对象
	BufferedWriter bw = null;
	BufferedReader br=  null;
	try {
	// 实例化字符流对象 通过 InputStreamReader 将字节输入流转化成字符输入流
	br = new BufferedReader(new InputStreamReader(in));
	bw = new BufferedWriter(new FileWriter("C:\\Users\\Administrator\\Desktop\\java\\9.16\\Day_03" + File.separator+"test.txt"));
	String line = null; // 定义读取数据的行
	while ((line = br.readLine()) != null) {// 读取数据
	if("exit".equals(line)){// 如果输入的是"exit"就退出
	break;
	}
	bw.write(line);// 将数据写入文件
	bw.newLine();// 写入新的一行
	bw.flush(); // 刷新数据缓冲
	}
	} catch (Exception e){
	} finally { // 释放资源
	try {
	if(bw != null)
	bw.close();
	if (br != null)
	br.close();
	} catch (IOException e){ }
	}
}}

	


